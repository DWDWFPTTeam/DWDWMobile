<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignUpActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ImageView>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:alpha="0.45"
                    android:background="@color/colorYellowOrange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="18dp">

                    </ImageView>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/radius_conner_white"
            android:layout_marginRight="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp20"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
              <ImageView
                  android:tint="@color/colorOrange"
                  android:src="@mipmap/ic_close"
                  android:scaleType="fitXY"
                  android:layout_gravity="center"
                  android:layout_width="@dimen/dp20"
                  android:layout_height="@dimen/dp20">
              </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/button_sign_up"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    android:background="@drawable/rounder_edit_text_1dp"
                    android:hint="Fullname"
                    android:textColorHighlight="@color/colorGrey"
                    android:textColorHint="@color/colorGrey"
                    android:textColor="@color/colorYellowOrange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60">
                </EditText>
                <EditText
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    android:background="@drawable/rounder_edit_text_1dp"
                    android:textColorHighlight="@color/colorGrey"
                    android:hint="Username"
                    android:textColorHint="@color/colorGrey"
                    android:textColor="@color/colorYellowOrange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60">
                </EditText>
                <EditText
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    android:background="@drawable/rounder_edit_text_1dp"
                    android:textColorHighlight="@color/colorGrey"
                    android:hint="Password"
                    android:textColorHint="@color/colorGrey"
                    android:textColor="@color/colorYellowOrange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60">
                </EditText>
                <EditText
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    android:background="@drawable/rounder_edit_text_1dp"
                    android:textColorHighlight="@color/colorGrey"
                    android:hint="Confirm Password"
                    android:textColorHint="@color/colorGrey"
                    android:textColor="@color/colorYellowOrange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/dp20"                android:layout_marginTop="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:background="@color/colorOrange"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60">
                <TextView
                    android:textSize="@dimen/sp18"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/button_sign_up"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginTop="@dimen/dp30"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="@dimen/sp12"
                    android:textStyle="italic"
                    android:textColor="@color/colorOrange"
                    android:text="Already here in account? "
                    android:gravity="right"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp20">
                </TextView>
                <TextView
                    android:layout_marginLeft="@dimen/dp5"
                    android:textSize="@dimen/sp13"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlue"
                    android:text="@string/button_sign_in"
                    android:gravity="left"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp20">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>